---
const {title} = Astro.props
const {src} = Astro.props
---
<div class="card--apps">
	<img src={src} alt="">
</div>

<style>
	.card--apps{
		background-color: #FFFFFF;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		width: 100%;
        height: 100px;
		border-radius: 16px;
	}
	.card--apps img{
		width: 70%;
	}

	@media screen and (max-width: 600px) {
	.card--apps{
		display: flex;
		flex-direction: column;
		width: 100%;
        height: 120px;
		border-radius: 16px;
	}
    }

</style>