---

interface Props {
	subtitle:string;
	description:string;
}

const {subtitle}= Astro.props;
const {description }= Astro.props;
---
<div class="principal--container  animate__animated animate__fadeInUp">
    <div class="principal--section__text">
        <h1>{description}</h1>
		<h3>{subtitle}</h3>
    </div>
</div>

<style>
    .principal--section__text h3{
		font-family: 'Inter';
		font-style: normal;
		font-weight: 500;
		font-size: 1.5rem;
		line-height: 24px;
		color: #FFDC9A;
		text-align: center;
	}
	.principal--section__text h1{
		font-family: 'Inter';
		font-style: normal;
		font-weight: 600;
		font-size: 64px;
		line-height: 77px;
		color: #FFFFFF;
		margin-bottom: 35px;
		text-align: center;
	}
	.principal--section__text {
		padding-top: 105px;
	}
	.principal--section__button{
		border: 1px solid #FFDC9A;
		border-radius: 7px;
		width: 187px;
        height: 56px;
		background-color: transparent;
		color:#FFDC9A;
		font-family: 'Poppins';
		font-style: normal;
		font-weight: 600;
		font-size: 20px;
		line-height: 30px;
		cursor: pointer;
	}
	.principal--container{
		display: flex;
		align-content: center;
		justify-content: center;
	}

	@media screen and (max-width: 600px) {
		.principal--container{
			padding-left: 1%;
			padding-right: 1%;
		}

		.principal--section__text h1{
		font-family: 'Inter';
		font-style: normal;
		font-weight: 600;
		font-size: 45px;
		line-height: 77px;
		color: #FFFFFF;
		margin-bottom: 35px;
		text-align: center;
	}
	}

</style>

<script>
	const secondarybutton = document.querySelector('.principal--section__button');
	secondarybutton.addEventListener('click',scrollingbutton)

	function scrollingbutton(){
		window.scrollTo(0,30000);
	}
</script>