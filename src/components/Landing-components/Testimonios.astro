---
const {src}= Astro.props;
const {testimonio}= Astro.props;
const {alt}= Astro.props;
const {nombre}= Astro.props;
const {cargo}= Astro.props;
---
<div class="testimonios-container">
    <div>
        <h4>{testimonio}</h4>
    </div>
    <div class="person-container">
        <img src={src} alt={alt}/>
        <div class="person-info">
            <h3>{nombre}</h3>
            <p>{cargo}</p>
        </div>
    </div>
</div>

<style>
    .testimonios-container{
        box-shadow: 0px 4px 64px rgba(0, 0, 0, 0.25);
        border-radius: 16px;
        background-color: white;
        width: 400px;
        height: 300px;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        justify-items: flex-end;
    }
    .person-container{
        display: flex;
        height: 30%;
        width: 100%;
        border-radius: 10px;
    }

    .person-container img{
        width: 70px;
        height: 70px;
        border-radius: 50%;
        align-content: center;
        object-fit: cover;
        margin-left: 20px;
    }

    .testimonios-container{
        display: flex;
        justify-content: end;
        margin: 1rem;
        width: 350px;
    }

    .testimonios-container h4{
        font-size: 1.1rem;
        padding-right: 15%;
        padding-left: 15%;
        font-weight: normal;
        color: #1D5AAA;
        text-align: center;
        padding-bottom: 10%;
    }

    .person-container h3{
        font-weight: bolder;
        font-size: 1.1rem;
        color: #1D5AAA;
    }
    .person-container p{
        font-weight: lighter;
        font-size: 1.1rem;
        color: #1D5AAA;
    }
    .person-info{
        padding-left: 20px;
        align-self: center;
    }
    
</style>