<style>

    :root{
        --type-fontsize-min: 1.625em;
        --type-fontsize-max: 4em;
        --type-fontsize-value: 0.73em + 4.36vw;
        --p-fontsize-min: 1.125em;
        --p-fontsize-max: 1.4375em;
        --p-fontsize-value: 1.02em + 0.53vw;
    }

    body{
        overflow-x: hidden;
    }

    .container{
        display: flex;
        align-items: center;
    }

    .pattern-div{
        z-index: -1;
        
    }
    .pattern-div-1{
        position: absolute;
        left: 85.86%;
        right: -115.36%;
        
    }
    .pattern-div-2{
        position: absolute;
        left: 15.86%;
        right: -115.36%;
        top: -24.87%;
        
    }
    .pattern-div-3{
        position: absolute;
        left: 87.89%;
        right: -12.1%;
        top: 10.91%;
        
    }
    .pattern-div-4{
        position: absolute;
        left: -11.16%;
        right: 87.66%;
        top: 45.8%;
    }
    .landing-title{
        font-family: 'Pacaembu Trial', sans-serif;
        font-weight: 600;
        font-size: clamp(var(--type-fontsize-min),var(--type-fontsize-value),var(--type-fontsize-max));
        text-align: center;
        color: #1D5AAA;
    }

    .landig-description{
        font-family: 'Mulish';
        font-style: normal;
        font-weight: 300;
        font-size: clamp(var(--p-fontsize-min),var(--p-fontsize-value),var(--p-fontsize-max));
        text-align: center;
        color: #000000;
    }

    .container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 60%;
        height: 40%;
    }
    .section-div{
        height: 100vh;
        display: flex;
        align-items: center;
        overflow-x: hidden;
        justify-content: center;
    }

    .contact-button{
        text-decoration: none;
        font-family: 'Pacaembu Trial', sans-serif;
        font-weight: 700;
        background-color: #1D5AAA;
        color: white;
        padding:15px;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;

    }
    .demo-button{
        text-decoration: none;
        font-family: 'Pacaembu Trial', sans-serif;
        font-weight: 700;
        background-color: white;
        color: #1D5AAA;
        padding:15px;
        border-radius: 5px;
        font-size: 1rem;
    }

    .buttons-container{
        padding-top: 5%;
    }

    .card-section{
        background-color: #1D5AAA;
        width: 65%;
        height: 70%;
        border-radius: 42px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card-section h3{
        font-family: 'Pacaembu Trial', sans-serif;
        font-style: normal;
        font-weight: 200;
        font-size: clamp(var(--p-fontsize-min),var(--p-fontsize-value),var(--p-fontsize-max));
        line-height: 27px;
        text-align: center;
        color: #FFFFFF;
    }

    .container-frase{
        padding-bottom: 40px;
        width: 75%;
    }

    .foto-container{
        display: flex;
        flex-direction: row;
        gap: 25px;
        width:40% ;
    }

    .foto-container h2{
        font-family: 'Pacaembu Trial', sans-serif;
        font-style: normal;
        font-weight: 600;
        font-size: 14px;
        color: #FFFFFF;
    }

    .foto-container p{
        font-family: 'Mulish';
        font-style: normal;
        font-weight: 200;
        font-size: 14px;
        color: #FFFFFF;
    }

    .iconos-container{
        display: flex;
        align-items: center;
        gap: 30px;
        text-align: center;
        justify-content: center;
        padding-top: 10%;
        padding-bottom: 10%;
    }

    .iconos-container h3{
        color: #1D5AAA;
        font-family: 'Pacaembu Trial', sans-serif;
        font-weight: 600;
    }

    .iconos-container div{
        width: 20%;
    }

    .banner-landing{
        width: 100%;
        height: 20%;
        background-color: #1472C1;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 5%;
    }

    .banner-container{
        width: 50%;

    }

    .banner-container h2{
        font-family: 'Pacaembu Trial', sans-serif;
        font-style: normal;
        font-weight: 400;
        font-size: 32px;
        line-height: 43px;
        color: #FFFFFF;
    }

    .banner-container p{
        font-family: 'Mulish';
        font-style: normal;
        font-weight: 300;
        font-size: 18px;
        line-height: 30px;
        color: #FFFFFF;
        padding-bottom: 10px;
    }

    .banner-button{
        text-decoration: none;
        font-family: 'Pacaembu Trial', sans-serif;
        font-weight: 700;
        background-color: white;
        color: #1D5AAA;
        padding:15px;
        border-radius: 5px;
    }
    .section-contactanos{
        display: flex;
        flex-direction: column;
        align-items: center;
        overflow-x: hidden;
        justify-content: center;
    }

    .form-container{
        display: flex;
        justify-content: center;
    }

    .form--frame{
        width: 800px;
        height: 430px;
    }

    .contact-div{
        z-index: -1;  
    }
    .contact-div-1{
        position: absolute;
        left: 85.86%;
        right: -115.36%;
        top: 344.87%;
        
    }
    .contact-div-2{
        position: absolute;
        left: 15.86%;
        top: 304.87%;
        
    }
    .contact-div-3{
        position: absolute;
        left: 87.89%;
        top: 403.8%;
        
    }
    .contact-div-4{
        position: absolute;
        left: -11.16%;
        top: 353.8%;
    }

    .footer img{
        width: 240px;
        padding-bottom: 2%;
    }

    .footer{
        display: flex;
        align-items: center;
        flex-direction: column;
    }


    @media screen and (max-width: 600px) {
        .contact-div{
        display: none;  
        }
        .pattern-div{
        display:none;
        }
        .container{
        width: 90%;
        }
        .buttons-container{
        display: flex;
        flex-direction: column;
        }
        .foto-container{
        display: flex;
        flex-direction: column;
        gap: 15px;
        width:40% ;
        text-align: center;
        }
        .card-section{
        width: 85%;
        height: 90%;
        border-radius: 42px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        }

        .iconos-container{
            display: flex;
            flex-direction: column;
        }

        .iconos-container div{
            width: 90%;
        }
        .icons-section {
            padding-top: 10%;
        }

        .banner-landing img{
            display: none;
       
        }

        .banner-landing{
            height: 100%;
            text-align: center;
       
        }

        .banner-container{
            width: 90%;
            padding: 10% 0%;

        }

        .section-contactanos{
        display: block;
        }

        .banner-container h2{
        font-family: 'Pacaembu Trial', sans-serif;
        font-style: normal;
        font-weight: 400;
        font-size: 25px;
        line-height: 43px;
        color: #FFFFFF;
        }

        .form--frame{
        border: 0;
        height: 550px;
        }

        .foto-container{
        width:80% ;
        }




		
    }

</style> 

