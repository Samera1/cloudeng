---
import Navbar from '../../components/Landing-components/Navbar.astro';
import Layout from '../../layouts/Layout.astro';
import Title from '../../components/Landing-components/RE1-Titulo.astro';
import Descript from "../../components/Landing-components/RE4-Descript.astro";
import Infoproducto from '../../components/Landing-components/Infoproducto.astro';
import Docsproducto from '../../components/Landing-components/Docsproducto.astro';
import Footer from '../../components/Landing-components/Footer.astro';
import Caracteristicasprod from '../../components/Landing-components/Caracteristicasprod.astro';
import Contactanos from '../../components/Landing-components/Contactanos.astro';
import Detalles from '../../components/Landing-components/Detalles.astro';
import Soluciones from '../../layouts/Soluciones.astro';
---

<Soluciones title="Azure Data Factory">
    <Navbar/>
    <section class="principal-section">
        <Title description="Azure Data Factory" subtitle=""/>
        <div class="beneficios--container animate__animated animate__fadeInUp">
            <Descript percent="90" description="Integrated connectors that do not require maintenance, and at no additional cost."/>
            <Descript percent="5GB" description="De la capacidad integral del ancho de banda de red subyacente"/>
            <Descript percent="88 %" description="Cost savings with the hybrid advantage of Azure."/>
        </div>
        <div class="button--container">
            <button class="principal--section__button animate__animated animate__fadeInUp" id="landingbutton">Contact Us</button>
        </div>
    </section>
    <section class="secondary-section">
        <div class="info-producto-container">
            <Infoproducto icon="../../data-factory.svg" title="Azure Data Factory" description="Integrate all data with Azure Data Factory, a fully managed serverless data integration service. Visually integrate data sources with over 90 built-in, maintenance-free connectors at no additional cost." href="../../AzureDataFactoryApps.png" />
            <Docsproducto image="../../AzureDataFactoryDocs.png" />
        </div>
    </section>
    <section>
        <Caracteristicasprod description="Data Factory provides a data transformation and integration layer that works across digital transformation initiatives." image="../../AzureDataFactoryBanner.png"    />
    </section>
    <section class="details--section">
        <Detalles title="Easy to use" descript="Rehost SQL Server Integration Services (SSIS) with just a few clicks and create ETL and ELT pipelines without code."/>
        <Detalles title="Profitable" descript="Enjoy a fully managed, pay-as-you-go serverless cloud service that scales on demand."/>
        <Detalles title="Great potential" descript="Enjoy a fully managed, pay-as-you-go serverless cloud service that scales on demand."/>
        <Detalles title="Intelligent" descript="Use headless ETL to benefit from operational efficiency and enable professional integrators."/>
    </section>
    <Contactanos/>
    <Footer/>
</Soluciones>

<style>
    *{
		margin: 0;
		padding: 0;
	}

	body{
		overflow-x:hidden !important;
		margin-left: 0;
        height: 100%; 
		background: radial-gradient(100% 100% at 50% 0%, #1F2063 0%, #1D5AAA 100%);
	}

    .details--section{
        display: flex;
        flex-direction: row;
        padding-left: 16%;
        padding-right: 16%;
        margin-top: 52px;
    }
    .principal-section{
        background: url("/public/Pathern.png");
        width: 100%;
        height: 60%;
        padding-left: 16%;
		padding-right: 16%;
    }
    .beneficios--container{
        display: grid;
        grid-template-columns: 0.8fr 0.8fr 0.8fr;
        text-align: center;
        column-gap: 68px;
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .principal--section__button{
		border: 1px solid #FFDC9A;
		border-radius: 7px;
		width: 187px;
        height: 56px;
		background-color: transparent;
		color:#FFDC9A;
		font-family: 'Poppins';
		font-style: normal;
		font-weight: 600;
		font-size: 1.25rem;
		line-height: 30px;
		cursor: pointer;
	}
    .button--container{
        display: flex;
        justify-content: center;
        padding-bottom: 200px;
    }

    .secondary-section{
        background-color: white;
        width: 100%;
        height: 630px;
        display: flex;
        flex-direction: row;
        align-items: center;
        align-content: center;
        align-self: center;
        padding-left: 8%;
        padding-right: 8%;
    }

    .info-producto-container{
        display: flex;
        flex-direction: row;
        gap: 15%;
    }

    @media screen and (max-width: 600px) {
        .beneficios--container{
        display: flex;
        flex-direction: column;
        text-align: center;
        gap: 68px;
        padding-top: 50px;
        padding-bottom: 50px;
        }

        .info-producto-container{
            display: flex;
            flex-direction: column;
        }
        
        .details--section{
        display: flex;
        flex-direction: column;
        gap: 30px;
        padding-left: 16%;
        padding-right: 16%;
        margin-top: 52px;
    }



    }

</style>