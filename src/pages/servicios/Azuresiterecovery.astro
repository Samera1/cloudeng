---
import Navbar from '../../components/Landing-components/Navbar.astro';
import Layout from '../../layouts/Layout.astro';
import Title from '../../components/Landing-components/RE1-Titulo.astro';
import Descript from "../../components/Landing-components/RE4-Descript.astro";
import Infoproducto from '../../components/Landing-components/Infoproducto.astro';
import Docsproducto from '../../components/Landing-components/Docsproducto.astro';
import Footer from '../../components/Landing-components/Footer.astro';
import Caracteristicasprod from '../../components/Landing-components/Caracteristicasprod.astro';
import Contactanos from '../../components/Landing-components/Contactanos.astro';
import Detalles from '../../components/Landing-components/Detalles.astro';
import Soluciones from '../../layouts/Soluciones.astro';
---

<Soluciones title="Azure Site Recovery">
    <Navbar/>
    <section class="principal-section">
        <Title description="Azure Site Recovery" subtitle=""/>
        <div class="beneficios--container animate__animated animate__fadeInUp">
            <Descript percent="75%" description="De los pequeños negocios no tienen ningún tipo de plan de recuperación ante desastres."/>
            <Descript percent="93%" description=" De las compañías que sufren un fallo  no tuvieron un plan de recuperación"/>
            <Descript percent="201%" description="De retorno de la inversion estimada para empresas con site recovery"/>
        </div>
        <div class="button--container">
            <button class="principal--section__button animate__animated animate__fadeInUp" id="landingbutton">Contactanos</button>
        </div>
    </section>
    <section class="secondary-section">
        <div class="info-producto-container">
            <Infoproducto icon="../../sql-stretch-database.svg" title="Azure Site Recovery" description="Implemente procesos de replicación, conmutación por error y recuperación con Site Recovery para mantener sus aplicaciones activas durante interrupciones planeadas y no planeadas." href="../../AzureSiteRecoveryApps.png" />
            <Docsproducto image="../../AzureSiteRecoveryDocs.png" />
        </div>
    </section>
    <section>
        <Caracteristicasprod description="Ayude a su empresa a seguir trabajando durante las interrupciones de TI importantes. Azure Site Recovery ofrece facilidad de implementación, rentabilidad y confiabilidad. Implemente procesos de replicación, conmutación por error y recuperación con Site Recovery" image="../../AzureSiteRecoveryBanner.png"    />
    </section>
    <section class="details--section">
        <Detalles title="Administración centralizada" descript="Supervisa, administra, controla y optimiza la protección de datos a gran escala de forma unificada y coherente con el Centro de copias de seguridad."/>
        <Detalles title="Coherencia de aplicaciones" descript="Realiza copias de seguridad de los datos de las máquinas virtuales y restáuralas con coherencia entre las aplicaciones"/>
        <Detalles title="Compatibilidad " descript="Crea copias de seguridad de instancias de Azure Virtual Machines, servidores del entorno local, SQL Server "/>
        <Detalles title="Almacenamiento duradero" descript="Guarda las copias de seguridad en almacenamiento con redundancia local (LRS), almacenamiento con redundancia geográfica (GRS)"/>
    </section>
    <Contactanos/>
    <Footer/>
</Soluciones>

<style>
    *{
		margin: 0;
		padding: 0;
	}

	body{
		overflow-x:hidden !important;
		margin-left: 0;
        height: 100%; 
		background: radial-gradient(100% 100% at 50% 0%, #1F2063 0%, #1D5AAA 100%);
	}

    .details--section{
        display: flex;
        flex-direction: row;
        padding-left: 16%;
        padding-right: 16%;
        margin-top: 52px;
    }
    .principal-section{
        background: url("/public/Pathern.png");
        width: 100%;
        height: 60%;
        padding-left: 16%;
		padding-right: 16%;
    }
    .beneficios--container{
        display: grid;
        grid-template-columns: 0.8fr 0.8fr 0.8fr;
        text-align: center;
        column-gap: 68px;
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .principal--section__button{
		border: 1px solid #FFDC9A;
		border-radius: 7px;
		width: 187px;
        height: 56px;
		background-color: transparent;
		color:#FFDC9A;
		font-family: 'Poppins';
		font-style: normal;
		font-weight: 600;
		font-size: 1.25rem;
		line-height: 30px;
		cursor: pointer;
	}
    .button--container{
        display: flex;
        justify-content: center;
        padding-bottom: 200px;
    }

    .secondary-section{
        background-color: white;
        width: 100%;
        height: 630px;
        display: flex;
        flex-direction: row;
        align-items: center;
        align-content: center;
        align-self: center;
        padding-left: 8%;
        padding-right: 8%;
    }

    .info-producto-container{
        display: flex;
        flex-direction: row;
        gap: 15%;
    }

    @media screen and (max-width: 600px) {
        .beneficios--container{
        display: flex;
        flex-direction: column;
        text-align: center;
        gap: 68px;
        padding-top: 50px;
        padding-bottom: 50px;
        }

        .info-producto-container{
            display: flex;
            flex-direction: column;
        }
        
        .details--section{
        display: flex;
        flex-direction: column;
        gap: 30px;
        padding-left: 16%;
        padding-right: 16%;
        margin-top: 52px;
    }



    }

</style>